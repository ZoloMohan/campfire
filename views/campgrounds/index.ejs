<% include ../partials/header %>


<header id="banner" class="d-flex justify-content-center align-items-center">
    <div class="overlay"></div>
    <div class="header container text-center text-white">
        <h1> Welcome to YelpCamp</h1>
    <p>View our hand-picked campgrounds from all over the world.</p>
    <a href="/campgrounds/new"class=" btn btn-info" id="newSite"><i class="fas fa-plus mr-1"></i> new site</a>
    </div>
</header>

<div class="container">
    <div class="row mt-4">
        <div class="col-lg-12 text-center">
            <h3>Our Most Popular Campgrounds!</h3>        
        </div>
    </div>

    <div class="row justify-content-center"> 
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="ui link cards">
                    <a href="/campgrounds/<%= campground._id %>">
                        <div class="ui card mt-5">
                            <div class="image">
                                <img class="card-img-top" src="<%= campground.image %>">
                            </div>
                            <div class="content">
                                <a class="header"><a href="/campgrounds/<%= campground._id %>"><%= campground.name %></a></a>
                                <div class="meta">
                                    <span class="date"><%= campground.created.toDateString()%></span>
                                </div>
                                <div class="description">
                                    <%= campground.description.substring(0,40);%> ... <a href="/campgrounds/<%= campground._id %>">Read More</a>
                                </div>
                            </div>
                            <div class="extra content">
                                <i class="user icon"></i><%= campground.author.username %>
                            </div>
                        </div>
                    </a>
                </div> 
            </div> 
        <% }) %>
    </div>


</div>

<% include ../partials/footer %>